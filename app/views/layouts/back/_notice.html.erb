<% if flash[:success] || flash[:fail] %>
  <script type="text/javascript">
    <% if flash[:success] %>
      $(function(){
        // $.jGrowl("<%= flash[:success] %>");

        $.gritter.add({
            // (string | mandatory) the heading of the notification
            title: '',
            // (string | mandatory) the text inside the notification
            text: '<%= flash[:success] %>',
            class_name: 'gritter-light'
        });
      });

    <% elsif flash[:fail] %>
      $(function(){
        $.jGrowl("<%= flash[:fail] %>");
      });
    <% end %>
  </script>
<% end %>
