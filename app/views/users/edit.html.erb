<% provide(:title, 'MDZZ') %>
  <div id="content" class="col-md-12">
    <div class="row">
      <div class="pageheader">


        <h2><i class="fa fa-tachometer"></i> 修改个人信息
        <span>// Place subtitle here...</span></h2>


        <div class="breadcrumbs">
          <ol class="breadcrumb">
            <li>You are here</li>
            <li><a><%= link_to '首页', back_root_path %></a></li>
            <li class="active"><%= link_to '个人信息', users_path %></li>
          </ol>
        </div>

      </div>

      <div class="main">
        <div class="row">
          <div class="col-md-12">
            <%= form_for(@user) do |f| %>
              <%= render 'shared/error_messages' %>

              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>

              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>

              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>

              <%= f.label :password_confirmation, "Confirmation" %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>

              <%= f.submit "保存修改", class: "btn btn-primary" %>
            <% end %>

            <div class="gravatar_edit">
              <%= gravatar_for @user %>
              <a href="http://gravatar.com/emails" target="_blank">更换头像</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
