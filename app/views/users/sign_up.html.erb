<% content_for :content_home do %>
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <section>
      <div class="register-header text-center">
        <h1><strong>用户注册</strong</h1>
      </div>
      <div class="register-body">
        <%= form_for @user, url: users_path(@user) do |f| %>
          <div class="register-form-group">
            <label class="col-sm-4 register-label">姓名 *</label>
            <div class="col-sm-8">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="register-form-group">
            <label class="col-sm-4 register-label">生日 *</label>
            <div class="col-sm-8">
              <%= f.text_field :birthday, class:"form-control", id:"datepicker" %>
            </div>
          </div>

          <div class="register-form-group">
            <label for="email" class="col-sm-4 register-label">邮箱 *</label>
            <div class="col-sm-8">
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
          <div class="register-form-group">
            <label class="col-sm-4 register-label">电话 *</label>
            <div class="col-sm-8">
              <%= f.text_field :phone, class:"form-control" %>
            </div>
          </div>

          <div class="register-form-group">
            <label class="col-sm-4 register-label">地址 *</label>
            <div class="col-sm-8">
              <%= f.text_field :address, class:"form-control" %>
            </div>
          </div>
          <div class="register-form-group">
            <label for="password" class="col-sm-4 register-label">密码 *</label>
            <div class="col-sm-8">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
          <div class="register-form-group">
            <label for="passwordconfirm" class="col-sm-4 register-label">确认密码 *</label>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
          <div class="register-form-group form-footer">
            <div class="col-sm-offset-4 col-sm-8">
              <%= f.submit "提交", class: "btn btn-primary" %>&nbsp;&nbsp;
              <button type="reset" class="btn btn-default">重置</button>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
  <div class="col-md-3"></div>
<% end %>
